<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"

    android:layout_marginTop="0.1dp"
    android:layout_marginBottom="0.1dp"
    android:background="@drawable/border"
    >



    <TextView
        android:id="@+id/text_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_created"
        android:text="Shop Name= "
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/text_storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textview"
        android:layout_toRightOf="@+id/textview"
        android:text="GGIGO"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/text_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:text="Now Discount 50%"
        android:textSize="13dp" />

    <Button
        android:id="@+id/button_accept"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="ACCEPT"
        android:textAllCaps="false"
        android:layout_below="@id/text_request"/>

    <Button
        android:id="@+id/button_reject"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:text="REJECT"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/button_accept"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>